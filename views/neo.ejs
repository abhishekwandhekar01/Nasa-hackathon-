<%- include('partials/header', { user: user }) %>

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-5">Near-Earth Object Tracker</h1>
        <p class="lead text-muted">Asteroids making a close approach on <strong><%= date %></strong>.</p>
    </div>

    <div class="d-flex flex-column gap-3">
        <% neos.forEach(neo => { %>
            <div class="feature-card text-start <%= neo.is_potentially_hazardous_asteroid ? 'border-danger' : 'border-success' %>">
                <h4 class="feature-title mb-3"><%= neo.name %></h4>
                <p>
                    <strong>Estimated Diameter:</strong> 
                    <%= Math.round(neo.estimated_diameter.meters.estimated_diameter_min).toLocaleString() %> - 
                    <%= Math.round(neo.estimated_diameter.meters.estimated_diameter_max).toLocaleString() %> meters
                </p>
                <p>
                    <strong>Miss Distance:</strong> 
                    <%= Math.round(neo.close_approach_data[0].miss_distance.kilometers).toLocaleString() %> km
                </p>
                <p class="mb-0">
                    <strong>Potentially Hazardous:</strong> 
                    <span class="fw-bold <%= neo.is_potentially_hazardous_asteroid ? 'text-danger' : 'text-success' %>">
                        <%= neo.is_potentially_hazardous_asteroid ? 'Yes' : 'No' %>
                    </span>
                </p>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>