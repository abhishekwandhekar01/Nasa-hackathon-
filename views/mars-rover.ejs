<%- include('partials/header', { user: user }) %>

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-5">Latest Photos from Mars</h1>
        <p class="lead text-muted">Images sent back from the Curiosity Rover.</p>
    </div>

    <div class="features-grid">
        <% photos.forEach(photo => { %>
            <div class="feature-card p-0 overflow-hidden"> <img src="<%= photo.img_src %>" alt="Photo from Mars" class="img-fluid">
                <div class="p-3 text-start">
                    <p class="mb-0"><strong>Camera:</strong> <%= photo.camera.full_name %></p>
                    <p class="text-muted mb-0"><strong>Date:</strong> <%= photo.earth_date %></p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('partials/footer') %>