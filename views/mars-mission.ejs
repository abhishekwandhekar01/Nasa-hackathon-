<%- include('partials/header', { user: user }) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="feature-card">
                <img src="<%= missionPhoto.img_src %>" class="img-fluid rounded mb-4" alt="Mission photo from Mars">
                <h3 class="feature-title">Mission: Identify the Camera</h3>
                <p class="feature-description">Analyze the image from the Curiosity Rover. Can you identify which camera captured this shot?</p>

                <form action="/submit-mission" method="POST" class="mt-4 text-start">
                    <div class="choices">
                        <% choices.forEach(choice => { %>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="userAnswer" id="<%= choice %>" value="<%= choice %>" required>
                                <label class="form-check-label" for="<%= choice %>">
                                    <%= choice %>
                                </label>
                            </div>
                        <% }) %>
                    </div>
                    
                    <input type="hidden" name="correctAnswer" value="<%= correctAnswer %>">
                    <button type="submit" class="btn btn-danger w-100 mt-3">Submit Intel</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>