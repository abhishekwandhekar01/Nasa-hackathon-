<%- include('partials/header', { user: user }) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="feature-card"> <img src="<%= apod.url %>" class="img-fluid rounded mb-4" alt="Astronomy Picture of the Day">
                <h3 class="feature-title">Daily APOD Quiz</h3>
                <p class="feature-description">Study the image above and guess its official NASA title.</p>
                
                <form action="/submit-quiz" method="POST" class="mt-3 text-start">
                    <div class="mb-3">
                        <label for="answer" class="form-label">What is the title of this picture?</label>
                        <input type="text" class="form-control" id="answer" name="userAnswer" required>
                        <input type="hidden" name="correctAnswer" value="<%= apod.title %>">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Submit Answer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>