<%- include('partials/header', { user: user }) %>

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-5">Explore Our Solar System</h1>
        <p class="lead text-muted">Learn key facts about the planets in our cosmic neighborhood.</p>
    </div>

    <section class="features-grid">
        <% planets.forEach(planet => { %>
            <div class="feature-card"> <h3 class="feature-title"><%= planet.name %></h3>
                <img src="<%= planet.image %>" alt="Image of <%= planet.name %>" class="img-fluid rounded-circle my-3" style="width: 150px; height: 150px; object-fit: cover;">
                <ul class="list-unstyled text-start">
                    <li><strong>Diameter:</strong> <%= planet.diameter %></li>
                    <li><strong>Distance from Sun:</strong> <%= planet.distanceFromSun %></li>
                    <li><strong>Moons:</strong> <%= planet.moons %></li>
                </ul>
            </div>
        <% }) %>
    </section>
</div>

<%- include('partials/footer') %>