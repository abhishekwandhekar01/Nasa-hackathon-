<%- include('partials/header', { user: user }) %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="feature-card">
                <h3 class="feature-title">Mission: Hazard Assessment</h3>
                <p class="feature-description">Of the following asteroids approaching today, which will have the closest flyby?</p>
                
                <div class="alert alert-info mt-3">
                    <strong>Intel Tip:</strong> Use the <a href="/neo" target="_blank" class="alert-link">NEO Tracker</a> to analyze the data.
                </div>

                <form action="/submit-neo-mission" method="POST" class="mt-4 text-start">
                     <div class="choices">
                        <% choices.forEach(choice => { %>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="userAnswer" id="<%= choice %>" value="<%= choice %>" required>
                                <label class="form-check-label" for="<%= choice %>">
                                    <%= choice %>
                                </label>
                            </div>
                        <% }) %>
                    </div>
                    
                    <input type="hidden" name="correctAnswer" value="<%= correctAnswer %>">
                    <button type="submit" class="btn btn-warning w-100 mt-3">Submit Assessment</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>