<%- include('partials/header', { user: user }) %>

<main>
  <section class="hero-section text-center py-5" style="background:#0b1120; color:white; min-height:90vh; display:flex; flex-direction:column; justify-content:center;">
    <div class="container">
      <nav class="d-flex justify-content-between align-items-center mb-4">
        <div></div>
        <div class="user-hero-info text-end">
          <% if (user) { %>
            <span class="badge-level me-2" style="background:#111827; padding:6px 12px; border-radius:8px;">Lv <%= user.level || '1' %></span>
            <span class="badge-xp" style="background:#1e293b; padding:6px 12px; border-radius:8px;"><%= (user.xp || 0).toLocaleString() %> XP</span>
          <% } %>
        </div>
      </nav>

      <h1 class="hero-title fw-bold mb-3" style="font-size:3rem;">
        Space Learning <span style="background: linear-gradient(90deg, #4f46e5, #9333ea); -webkit-background-clip:text; -webkit-text-fill-color:transparent;">Universe</span>
      </h1>
      
      <p class="hero-subtitle mx-auto" style="max-width:750px; font-size:1.1rem; color:#cbd5e1;">
        We're not just making a quiz app. We're building an immersive space learning experience where students can explore planets in AR, solve space missions with real NASA data, and compete globally.
      </p>

      <div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
        <a href="/ar" class="btn btn-info px-4 py-2 fw-semibold" style="border-radius:10px; background:#0ea5e9; border:none;">AR/VR Ready</a>
        <a href="#" class="btn px-4 py-2 fw-semibold" style="border-radius:10px; background:#8b5cf6; border:none;">AI-Powered</a>
        <a href="/daily-quiz" class="btn btn-primary px-4 py-2 fw-semibold" style="border-radius:10px;">Start Quiz</a>
        <a href="/neo-mission" class="btn btn-warning px-4 py-2 fw-semibold" style="border-radius:10px;">Start Assessment</a>
      </div>

      <div class="mt-5">
        <a href="/missions" class="btn px-5 py-3 fw-bold" style="background:#2563eb; border:none; color:white; border-radius:12px;">
          <i class="fas fa-rocket me-2"></i> Start Your Space Journey
        </a>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
